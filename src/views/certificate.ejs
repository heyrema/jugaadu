<%- include('partials/top') %>
	<div class="container-fluid text-white">
		<%- include('partials/header', { title: locals.title ?? 'Certificate' }) %>
		<div class='visible-pre-completion row text-center mb-2'>
			<div class='col-12'>
				<div class='spin-skeleton light'></div>
			</div>
		</div>
		<div hidden class="visible-post-completion row">
			<div id='certificate-wrapper' class='col-12 col-md-6 offset-md-3 p-0 mb-3'>
				<div id='certificate' class="d-block m-auto"
					data-width="1000"
					data-height="740"
					data-src='<%= cert %>'>
				</div>
			</div>
		</div>
		<div hidden id='links' class='visible-post-completion row text-center'>
			<div class='col-12 col-md-6 offset-md-3 mb-1'>
				<a href='#' target='_blank' id='email' class='btn btn-social-icon btn-vk'>
					<i class='fa fa-envelope'></i>
				</a>
				<a href='#' target='_blank' id='facebook' class='btn btn-social-icon btn-facebook'>
					<i class='fa fa-facebook'></i>
				</a>
				<a href='#' target='_blank' id='twitter' class='btn btn-social-icon btn-twitter'>
					<i class='fa fa-twitter'></i>
				</a>
				<a href='#' target='_blank' id='linkedin' class='btn btn-social-icon btn-linkedin'>
					<i class='fa fa-linkedin'></i>
				</a>
			</div>
			<div class='col-12 col-md-6 offset-md-3'>
				<button onclick='downloadCert("PNG");' class='btn btn-success'>
					<i class='fa fa-arrow-down'></i> PNG
				</button>
				<button onclick='downloadCert("PDF");' class='btn btn-primary'>
					<i class='fa fa-arrow-down'></i> PDF
				</button>
			</div>
		</div>
	</div>
	<script>
		var certificate = {
			title: '<%= locals.title ?? "Certificate" %>',
			PNG: '<%= cert %>',
			PDF: '<%= cert %>'
		};
	</script>
<%- include('partials/bottom') %>